{
    "env": {
        "browser": true,
		"commonjs": true,
        "es2021": true,
		"node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
	"ignorePatterns": [
		"platforms"
	],
    "rules": {
		"eol-last": "error",
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
